{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "target": "ES2018",
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "incremental": true,

    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": { "@/*": ["src/*"] },
    "plugins": [{ "name": "next" }]
  },

  "exclude": ["node_modules", ".next"],
  "include": [
    "next-env.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    ".next/types/src/**/*.ts",
    ".next/types/**/*.ts"
  ]
}
